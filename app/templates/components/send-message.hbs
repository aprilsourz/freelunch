{{paper-divider}}
{{#paper-form onSubmit="createMessage"}}
  <H3>Message must be under 750 characters.</H3>
  {{paper-input
     textarea=true
     block=true
     label="Type message here"
     maxlength=750
     passThru=(hash rows=5 maxRows=5)
     value=newMessage.body
     onChange=(action (mut newMessage.body))
     required=true
   }}

  {{#paper-button type='submit'}}Submit{{/paper-button}}

{{/paper-form}}
