{{#paper-toolbar accent=true}}
<h4>
  Change your password!

  {{#if isEngineer}}
      {{#link-to 'engineer'}} {{#paper-button fab=true}}Back{{/paper-button}}{{/link-to}}

    {{/if}}
    {{#if isRecruiter}}
      {{#link-to 'recruiter'}}
        {{#paper-button fab=true}}Back{{/paper-button}}
      {{/link-to}}
    {{/if}}
</h4>
{{/paper-toolbar}}



{{#paper-form onSubmit="submit"}}
  {{paper-input  label="Old Password" type="password" value=passwords.previous onChange=(action (mut passwords.previous)) }}
  {{paper-input  label="New Password" type="password" value=passwords.next onChange=(action (mut passwords.next)) }}
{{#paper-button type='submit'}}Submit{{/paper-button}}
{{/paper-form}}








