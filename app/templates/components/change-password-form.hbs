<div class="form-group">
  <label for="previous">Current Password</label>
  {{input type="password"
          class="form-control"
          id="previous"
          placeholder="Old password"
          value=passwords.previous}}

</div>

<div class="form-group">
  <label for="next">New Password</label>
  {{input type="password"
          class="form-control"
          id="next"
          placeholder="New password"
          value=passwords.next}}
</div>

<button type="submit" class="btn btn-primary" {{action "submit"}}>
  Change Password
</button>

{{#if isEngineer}}
  {{#link-to 'engineer'}}
    <button class="btn btn-default" {{action "reset"}}>
      Back
    </button>
  {{/link-to}}
  {{/if}}
  {{#if isRecruiter}}
    {{#link-to 'recruiter'}}
      <button class="btn btn-default" {{action "reset"}}>
        Back
      </button>
    {{/link-to}}
  {{/if}}
