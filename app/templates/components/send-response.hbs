<blockquote>
  <p>Do you want to have lunch with {{conversation.recruiter.name}}? | Website: {{conversation.recruiter.website}}</p>
</blockquote>

<h5>Invitation Message</h5>
<p>{{conversation.lunchRequest}}</p>


{{#if conversation.isCompleted}}
<h5>Your response</h5>
{{conversation.response}}
{{else}}
<form class="form-group" {{action 'reply' on='submit'}}>
{{textarea
    cols="50"
    rows="6"
    class="form-control"
    value=text
    placeholder='Want lunch?'
  }}
  <button type=submit class="btn btn-primary">Send</button>
</form>
{{/if}}
