<blockquote>
  <p>Do you want to have lunch with {{conversation.recruiter.name}}? | Website: <a target="_blank" href="{{conversation.recruiter.website}}">{{conversation.recruiter.website}}</a></p>
</blockquote>

<h5>Invitation Message</h5>
<p>{{conversation.lunchRequest}}</p>


{{#if conversation.isCompleted}}
<h5>Your response</h5>
{{conversation.response}}
{{else}}
<form class="form-group" {{action 'reply' on='submit'}}>
<fieldset>Message must be under 1000 characters.</fieldset>
{{textarea
    required="true"
    maxlength="1000"
    cols="50"
    rows="6"
    class="form-control"
    value=text
    placeholder='Type Resonse Here'
  }}
  <button type=submit class="btn btn-primary">Send</button>
</form>
{{/if}}
