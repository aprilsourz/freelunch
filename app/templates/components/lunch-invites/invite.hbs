{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}
         {{conversation.recruiter.name}} invited you to lunch!
      {{/text.headline}}
    {{/title.text}}
    {{#title.media size="lg" }}
      {{lunch-invites/invite/status conversation=conversation}}
    {{/title.media}}
  {{/card.title}}

  <div class="md-actions" layout-align="center">
    <a target="_blank" href="{{conversation.recruiter.website~}}">
      {{#paper-button}}View their website{{/paper-button}}
    </a>
    {{#link-to 'engineer.view-invite' conversation.id ~}}
      {{#paper-button}}View invitation{{/paper-button}}
    {{~/link-to}}
    {{#paper-button~}}
      <div {{action 'deleteConvo'}}>Delete</div>
    {{~/paper-button}}
  </div>
{{/paper-card}}
